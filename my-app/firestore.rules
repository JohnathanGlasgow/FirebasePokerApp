rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Match the user document
    match /users/{userId}/{document=**} {
      // Allow the user to read/write their own documents at any depth
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Match the games collection
    match /games/{gameId} {
      // Allows all users to read, create, and modify games
      allow read, create, update: if request.auth != null;
      // User must be in the players collection to delete the game
      allow delete: if request.auth != null && exists(/databases/$(database)/documents/games/$(gameId)/players/$(request.auth.uid));
      }
    
    // Match the games/{gameId}/players collection
    match /games/{gameId}/players/{playerId} {
      // Allows all users to read, create, and modify players for a game
      allow read, create, update: if request.auth != null;
      // User must be the player to delete themselves from the game
      allow delete: if request.auth.uid == playerId;
      }

  }
}